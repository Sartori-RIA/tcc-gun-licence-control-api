<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

	<persistence-unit name="sinarm" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>	


		<properties>
			<!-- none create drop -->			 

			<!--  
			<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.create-target" value="create.ddl"/>
      		<property name="javax.persistence.schema-generation.scripts.drop-target" value="drop.ddl"/>
      		-->
      		
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sinarm_db" />
			<!-- USUARIO DO DATABASE -->
			<property name="javax.persistence.jdbc.user" value="root" />
			<!-- SENHA DO DATABASE -->
			<property name="javax.persistence.jdbc.password" value="3660" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />			
			
			<!-- create - executa na criação - update - executa na consulta -->
			 <property name="hibernate.hbm2ddl.auto" value="create" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="create" />-->
		</properties>
		
	</persistence-unit>
</persistence> 

